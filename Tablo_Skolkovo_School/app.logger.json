{
   "appenders": {
      "console": {
         "type": "stdout",
         "layout": {
            "type": "pattern",
            "pattern": "%d{yyyy-MM-dd hh:mm:ss.SSS} %[[%-5p]%] %m"
         }
      },
      "app": {
         "type": "file",
         "filename": "./logs/tablo.log",
         "maxLogSize": "10M",
         "backups": 5,
         "layout": {
            "type": "pattern",
            "pattern": "%d{yyyy-MM-dd hh:mm:ss.SSS} [%-5p] %m"
         }
      }
   },
   "categories": {
      "default": {
         "appenders": [
            "console",
            "app"
         ],
         "level": "info"
      }
   }
}